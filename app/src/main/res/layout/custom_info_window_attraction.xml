<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/attractionImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/attractionNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_pin"
            android:drawableRight="@drawable/ic_location_pin"
            android:fontFamily="@font/trench100free"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@color/btouristPurple"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attractionCategoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trench100free"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@color/btouristPurple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attractionDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/trench100free"
            android:text="TextView"
            android:textColor="@color/btouristPurple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attractionPhoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trench100free"
            android:text="TextView"
            android:textColor="@color/btouristPurple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attractionWebsiteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trench100free"
            android:text="TextView"
            android:textColor="@color/btouristPurple"
            android:textStyle="bold" />
</LinearLayout>
</RelativeLayout>