<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/whiteAccent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:background="@color/greyAccent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/trench100free"
                android:gravity="center"
                android:singleLine="false"
                android:text="TextView"
                android:textColor="@color/whiteAccent"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/ic_action_language"
                android:fontFamily="@font/trench100free"
                android:gravity="center|start"
                android:padding="3dp"
                android:paddingLeft="10dp"
                android:text="Languages"
                android:textColor="@color/whiteAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languageText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languageText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/ic_action_info"
                android:fontFamily="@font/trench100free"
                android:gravity="center|start"
                android:padding="3dp"
                android:text="Personal Details"
                android:textColor="@color/whiteAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/ic_action_heart"
                android:fontFamily="@font/trench100free"
                android:gravity="center|start"
                android:padding="3dp"
                android:text="Interests"
                android:textColor="@color/whiteAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interestText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interestText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interestText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_round"
                android:fontFamily="@font/trench100free"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/btouristPurple"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>