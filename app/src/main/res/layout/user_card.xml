<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/cardView_item_person"

    android:layout_width="match_parent"

    android:layout_height="70dp"

    android:layout_margin="4dp"

    android:backgroundTint="@color/lightGreyAccent"

    android:clickable="true"

    android:focusable="true"

    android:foreground="?android:attr/selectableItemBackground"

    app:cardBackgroundColor="@android:color/white"

    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">


    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:backgroundTint="@color/greyAccent">

        <ImageView

            android:id="@+id/imageView_profile_picture"

            android:layout_width="60dp"

            android:layout_height="60dp"

            android:layout_centerVertical="true"

            android:layout_marginStart="20dp"

            tools:src="" />


        <TextView

            android:id="@+id/textView_name"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"

            android:layout_marginTop="5dp"

            android:layout_toEndOf="@id/imageView_profile_picture"

            android:textAppearance="@style/Base.TextAppearance.AppCompat"

            android:textSize="25sp"

            tools:text="Name" />


        <TextView

            android:id="@+id/textView_bio"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@+id/textView_name"

            android:layout_alignStart="@+id/textView_name"

            android:layout_marginStart="2dp"

            android:ellipsize="end"

            android:maxLines="1"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

            tools:text="Age" />

        <TextView
            android:id="@+id/interestText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/textView_name"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/interestText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interestText1"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/textView_name"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/interestText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interestText2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/textView_name"
            android:text="TextView" />

        <TextView
            android:id="@+id/languageText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/interestText1"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/languageText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/languageText1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/interestText1"
            android:text="TextView"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>